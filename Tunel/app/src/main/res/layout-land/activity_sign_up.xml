<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#EBF6FF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="900dp"
        tools:ignore="ScrollViewSize">

        <TextView
            android:text="Sign up for TunÃ©l"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:textStyle="bold"
            android:id="@+id/register"
            android:layout_below="@+id/register_logo"
            android:layout_centerHorizontal="true" />

        <EditText
            android:background="#FEFDFE"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/fullname"
            android:hint="  Full Name"
            android:maxLines="1"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/register"
            android:layout_centerHorizontal="true"
            tools:ignore="HardcodedText" />

        <ImageView
            android:layout_width="400dp"
            android:layout_height="95dp"
            app:srcCompat="@drawable/logononame"
            android:id="@+id/register_logo"
            android:contentDescription="@string/tunellogo"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />


        <Spinner
            android:background="#FEFDFE"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:id="@+id/user_course_level"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/user_ID"
            android:layout_alignStart="@+id/user_ID" />

        <EditText
            android:background="#FEFDFE"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/user_ID"
            android:hint="  Student ID"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/fullname"
            android:layout_alignStart="@+id/fullname"
            tools:ignore="HardcodedText" />

        <EditText
            android:background="#FEFDFE"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/user_email"
            android:hint="  Email"
            tools:ignore="HardcodedText"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/user_course_level"
            android:layout_alignStart="@+id/user_ID" />

        <EditText
            android:background="#FEFDFE"
            android:layout_width="300sp"
            android:layout_height="35dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/user_pass"
            android:hint="  Password"
            tools:ignore="HardcodedText"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/user_email"
            android:layout_alignStart="@+id/user_email" />


        <Button
            android:background="#2471A3"
            android:text="@string/sign_up"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:layout_width="250dp"
            android:layout_height="55dp"
            android:id="@+id/singup_button"
            android:layout_marginTop="40dp"
            android:layout_below="@+id/user_pass"
            android:layout_centerHorizontal="true" />


    </RelativeLayout>



</ScrollView>