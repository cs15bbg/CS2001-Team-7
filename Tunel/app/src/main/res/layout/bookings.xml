<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_bookings"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/GTA1_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="50dp"
            android:background="#DDDDDD">

            <ImageView
                android:id="@+id/GTA1_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"/>

            <TextView
                android:id="@+id/GTA1_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/GTA1_image"
                android:text="Name And Surname"
                android:ems="10"
                android:textColor="#000000"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/GTA1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/GTA1_image"
                android:layout_below="@id/GTA1_name"
                android:text="GTA"
                android:ems="10"
                android:textColor="#000000"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"/>
        </RelativeLayout>

        <CalendarView
            android:id="@+id/calendar"
            android:layout_below="@+id/GTA1_layout"
            android:layout_width="500dp"
            android:layout_height="300dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp">

        </CalendarView>

        <Button
            android:id="@+id/book_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book"
            android:layout_below="@+id/calendar"
            android:layout_alignRight="@+id/GTA1_layout"
            android:layout_alignEnd="@+id/GTA1_layout" />

</RelativeLayout>