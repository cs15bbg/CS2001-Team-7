<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:id="@+id/new_question">


        <EditText
            android:id ="@+id/new_question_text"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="2dp"
            android:hint="Type question"
            android:inputType="text"
            android:ems="10"
            android:textColor="#000000"
            android:background="#D6DBDF"/>

        <Button
            android:layout_below="@id/new_question_text"
            android:id="@+id/topic_button"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_marginLeft="15dp"
            android:textColor="#000000"
            android:ems="10"
            android:text="Topics"/>

        <Button
            android:layout_below="@id/new_question_text"
            android:layout_toRightOf="@id/topic_button"
            android:id="@+id/availability_button"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:textColor="#000000"
            android:ems="10"
            android:text="Availability"/>

        <Button
            android:layout_below="@id/topic_button"
            android:id="@+id/cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="60dp"
            android:textColor="#000000"
            android:ems="10"
            android:text="Cancel"/>
        <Button
            android:layout_below="@id/availability_button"
            android:layout_toRightOf="@id/cancel_button"
            android:id="@+id/confirm_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginRight="15dp"
            android:textColor="#000000"
            android:ems="10"
            android:text="Confirm"/>
    </RelativeLayout>