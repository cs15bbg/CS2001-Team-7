<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="uk.ac.brunel.tunel.MainActivity"
    android:orientation="vertical">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/tunellogo"
        android:layout_marginTop="31dp"
        android:id="@+id/tunellogo"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:contentDescription="Tunel Logo"/>

    <Button
        android:background="#2471A3"
        android:text="@string/sign_in"
        android:textSize="20sp"
        android:textColor="#fff"
        android:layout_width="180dp"
        android:layout_height="45dp"
        android:id="@+id/sign_in"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tunellogo" />

    <Button
        style="@style/Widget.AppCompat.Button.Colored"
        android:background="#2471A3"
        android:text="Sign Up"
        android:textSize="20sp"
        android:textColor="#fff"
        android:layout_width="180dp"
        android:layout_height="45dp"
        android:layout_marginTop="17dp"
        android:id="@+id/button"
        android:layout_below="@+id/sign_in"
        android:layout_alignStart="@+id/sign_in" />


</RelativeLayout>
